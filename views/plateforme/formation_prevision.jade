extends layout
append cscripts
    // Data table CSS
    link(href='/vendors/bower_components/datatables/media/css/jquery.dataTables.min.css', rel='stylesheet', type='text/css')
    // select2 CSS
    link(href='/vendors/bower_components/select2/dist/css/select2.min.css', rel='stylesheet', type='text/css')
    link(href='/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css', rel='stylesheet', type='text/css')
    link(href='/vendors/bower_components/filament-tablesaw/dist/tablesaw.css', rel='stylesheet', type='text/css')
    link(href='/vendors/bower_components/bootstrap-daterangepicker/daterangepicker.css', rel='stylesheet', type='text/css')
block contenu
    .row
        .panel.panel-default.card-view
            .panel-heading
                .pull-left
                    h6.panel-title.txt-dark
                        h3 Prévisions des formations
                .pull-right
                    a.button.btn.btn-primary(href='/users/mon-espace') Mon espace
                .clearfix
            .panel-wrapper.collapse.in
                .panel-body
                    .row
                        .form-wrap
                            form(method='POST' action='')
                                .row.ml-10
                                    .form-group.col-sm-4.col-xs-12
                                        label.control-label.mb-10(for='')
                                            | Type de formation :
                                            span(style='color: red') *
                                        select.text-capitalize#chapitre.form-control(type='select', name='type_formation' required='true' )
                                            option(value='') Choisissez le type de formation
                                            option(value='seminaire' ) Seminaire
                                            option(value='cont' ) Formation continue
                                            option(value='cont' ) Formation de perfectionnement
                                            option(value='atelier' ) Atelier
                                    .form-group.col-sm-4.col-xs-12
                                        label.control-label.mb-10(for='')
                                            | Attacher une direction :
                                            span(style='color: red') *
                                        select.text-capitalize#chaptre.form-control(type='select', name='type_conge' required='true' )
                                            option(value='') Attacher une direction
                                            option(value='grandt' ) DIRECTION GENERALE DES GRANDS TRAVAUX
                                            option(value='cont' ) DIRECTION GENERALE DES ROUTES RURALES
                                            option(value='atelier' ) DIRECTION DES ROUTES ET OUVRAGES D'ART
                                            option(value='grandt' ) INSPECTION GENERALE DES SERVICES
                                            option(value='cont' ) DIVISION DES INFRASTRUCTURES FERROVIAIRES
                                            option(value='atelier' ) DIVISION DES ETUDES ECQS ET IMPACTS ENV. ET SOCIAL
                                            option(value='grandt' ) DIVISION DES INFRASTRUCTURES FLUVIALES
                                            option(value='cont' ) DIVISION DES ETUDES TECHNIQUES
                                            option(value='atelier' ) DIRECTION DES ROUTES ET OUVRAGES D'ART
                                            option(value='grandt' ) INSPECTION GENERALE DES SERVICES
                                            option(value='cont' ) DIVISION DES INFRASTRUCTURES FERROVIAIRES
                                            option(value='atelier' ) DIVISION DES ETUDES ECQS ET IMPACTS ENV. ET SOCIAL
                                    .form-group.col-sm-3.col-xs-12
                                        label.control-label.mb-10(for='')
                                            | Nombre de place :
                                        input.form-control(type='numeric', placeholder='' name='nb')
                                    .form-group.col-sm-3.col-xs-12
                                        label.control-label.mb-10(for='')
                                            | Montant de la formation/personne :
                                        input.form-control(type='text', placeholder='' name='montant')
                                    .form-group.col-sm-3.col-xs-12
                                        label.control-label.mb-10(for='')
                                            | Lieu de la formation :
                                        input.form-control(type='text', placeholder='' name='lieu')


                                .row
                                    .col-md-12
                                        .panel.panel-default.card-view
                                            .panel-heading
                                                .pull-left
                                                    h6.panel-title.txt-dark
                                                        | Date de début et de fin de la formation :
                                                        span(style='color: red') *
                                                .clearfix
                                            .panel-wrapper.collapse.in
                                                .panel-body
                                                    .form-group.col-sm-6.col-xs-12
                                                        input.form-control.input-limit-datepicker(type='text', name='daterange',required)

                                // /Row
                                button.btn.btn-success.ml-15.mr-10.mt-100.col-sm-2.col-xs-12(type='submit') Valider
                                button.btn.btn-default.mt-100.col-sm-2.col-xs-12(type='cancel') Annuler

